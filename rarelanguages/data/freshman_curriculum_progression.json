      "cultural_contexts": [
        "Family meals together",
        "Shopping for groceries",
        "Trying new Albanian foods",
        "Restaurant ordering"
      ],
      "sample_phrases": [
        "Mua më pëlqen buka. (I like bread.)",
        "Unë dua ujë, ju lutem. (I want water, please.)",
        "Ne hamë mëngjes së bashku. (We eat breakfast together.)",
        "Nana blen fruta në market. (Mom buys fruits at the market.)"
      ]
    },

    "unit_6": {
      "title": "Weather & Seasons",
      "duration": "4 weeks",
      "lessons": 5,
      "cefr_level": "A1+",
