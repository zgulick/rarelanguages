  "unit_progression": {
    "unit_1": {
      "title": "Greetings & Self-Introduction",
      "duration": "4 weeks",
      "lessons": 5,
      "cefr_level": "A1",
      "learning_goals": [
        "Basic greetings and farewells",
        "Introducing yourself (name, age, nationality)",
        "Asking 'How are you?' and responding",
        "Numbers 1-20",
        "Basic politeness phrases"
      ],
      "key_vocabulary": [
        "përshëndetje (hello)",
        "mirëdita (good day)",
        "si jeni? (how are you?)",
        "unë quhem... (my name is...)",
        "faleminderit (thank you)",
        "ju lutem (please)",
        "mirë (good/well)",
        "shqiptar/shqiptare (Albanian)"
      ],
      "grammar_focus": [
        "Subject pronouns (unë, ti, ai/ajo)",
        "Verb 'to be' (jam, je, është)",
        "Basic word order",
        "Question formation with 'si'"
      ],
      "cultural_contexts": [
        "Meeting someone for the first time",
        "Greeting classmates at school",
        "Introducing yourself to a friend's family",
        "Being polite in Albanian culture"
      ],
      "sample_phrases": [
        "Përshëndetje! Unë quhem Maria. (Hello! My name is Maria.)",
        "Si jeni? (How are you?)",
        "Mirë, faleminderit. (Good, thank you.)",
        "Unë jam pesëmbëdhjetë vjeç. (I am fifteen years old.)"
      ]
    },

    "unit_2": {
      "title": "Family & Relationships",
      "duration": "4 weeks",
      "lessons": 5,
      "cefr_level": "A1",
      "learning_goals": [
        "Family member vocabulary",
        "Describing family relationships",
        "Talking about age and appearance",
        "Possessive pronouns",
        "Basic adjectives"
      ],
      "key_vocabulary": [
        "familja (family)",
        "babai (father)",
        "nëna (mother)",
        "vëllai (brother)",
        "motra (sister)",
        "gjyshi/gjyshja (grandfather/grandmother)",
        "i madh/e madhe (big)",
        "i vogël/e vogël (small)"
      ],
      "grammar_focus": [
        "Possessive pronouns (im/ime, yt/yte)",
        "Adjective agreement (masculine/feminine)",
        "Demonstratives (ky/kjo - this)",
        "Simple descriptions"
      ],
      "cultural_contexts": [
        "Describing family photos",
        "Meeting extended family",
        "Talking about siblings",
        "Family gatherings and traditions"
      ],
      "sample_phrases": [
        "Kjo është familja ime. (This is my family.)",
        "Babai im është i lartë. (My father is tall.)",
        "Motra ime ka pesë vjeç. (My sister is five years old.)",
        "Gjyshja ime është shumë e mirë. (My grandmother is very nice.)"
      ]
    },

    "unit_3": {
      "title": "School Life",
      "duration": "4 weeks",
      "lessons": 5,
      "cefr_level": "A1",
      "learning_goals": [
        "School vocabulary and subjects",
        "Classroom objects",
        "Talking about schedule",
        "Days of the week",
        "Time expressions"
      ],
      "key_vocabulary": [
        "shkolla (school)",
        "mësuesi/mesuesja (teacher)",
        "nxënësi/nxënësja (student)",
        "libri (book)",
        "lapsi (pencil)",
        "matematika (mathematics)",
        "gjuha (language)",
        "historia (history)"
      ],
      "grammar_focus": [
        "Present tense regular verbs",
        "Time expressions",
        "Days of the week",
        "Prepositions (në, me, për)"
      ],
      "cultural_contexts": [
        "First day at a new school",
        "Talking about favorite subjects",
        "Describing your classroom",
        "Planning study time"
      ],
      "sample_phrases": [
        "Unë shkoj në shkollë. (I go to school.)",
        "Mësuesi im është i mirë. (My teacher is good.)",
        "Matematika është e vështirë. (Mathematics is difficult.)",
        "Unë kam libra në çantë. (I have books in my bag.)"
      ]
    },

    "unit_4": {
      "title": "Home & Daily Life",
      "duration": "5 weeks",
      "lessons": 6,
      "cefr_level": "A1",
      "learning_goals": [
        "Rooms and furniture",
        "Daily routines",
        "Household activities",
        "Time expressions",
        "Present tense mastery"
      ],
      "key_vocabulary": [
        "shtëpia (house)",
        "dhoma (room)",
        "kuzina (kitchen)",
        "banjo (bathroom)",
        "krevati (bed)",
        "tavolina (table)",
        "karrige (chair)",
        "televizori (television)"
      ],
      "grammar_focus": [
        "Present tense irregular verbs",
        "Time expressions (morning, evening)",
        "Frequency adverbs (gjithmonë, ndonjëherë)",
        "Object pronouns"
      ],
      "cultural_contexts": [
        "Describing your bedroom",
        "Help with household chores",
        "Family dinner time",
        "Weekend activities at home"
      ],
      "sample_phrases": [
        "Dhoma ime është e bukur. (My room is beautiful.)",
        "Unë ha mëngjes në kuzinë. (I eat breakfast in the kitchen.)",
        "Familja shikon televizor. (The family watches television.)",
        "Nëna gatuan në mbrëmje. (Mom cooks in the evening.)"
      ]
    },

    "unit_5": {
      "title": "Food & Eating",
      "duration": "5 weeks",
      "lessons": 6,
      "cefr_level": "A1+",
      "learning_goals": [
        "Food and drink vocabulary",
        "Meal times and eating habits",
        "Expressing preferences",
        "Ordering food",
        "Quantities and portions"
      ],
      "key_vocabulary": [
        "ushqimi (food)",
        "buka (bread)",
        "mishi (meat)",
        "perime (vegetables)",
        "fruta (fruits)",
        "ujë (water)",
        "qumësht (milk)",
        "kafe (coffee)"
      ],
      "grammar_focus": [
        "Like/dislike expressions",
        "Quantity expressions",
        "Imperative mood (basic)",
        "Modal verbs (dua - want)"
