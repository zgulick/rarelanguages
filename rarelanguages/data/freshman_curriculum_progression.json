  "learning_objectives": {
    "communication": [
      "Introduce yourself and ask about others",
      "Talk about family and friends",
      "Describe your daily routine",
      "Express basic needs and preferences",
      "Give and ask for simple directions",
      "Order food and drinks",
      "Talk about weather and seasons",
      "Express simple opinions and feelings"
    ],
    "grammar": [
      "Use present tense verbs",
      "Form basic questions",
      "Use possessive pronouns",
      "Apply adjective agreement",
      "Use numbers 1-100",
      "Express time and dates",
      "Use basic past tense",
      "Form simple future statements"
    ],
    "vocabulary": [
      "Family relationships",
      "School vocabulary",
      "Home and furniture",
      "Food and drinks",
      "Colors and descriptions",
      "Time expressions",
      "Weather terms",
      "Basic emotions"
    ]
