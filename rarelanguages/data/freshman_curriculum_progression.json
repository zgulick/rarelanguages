{
  "version": "1.0.0",
  "title": "Freshman Albanian Curriculum Progression",
  "description": "Complete learning progression for high school freshman (ages 14-16) learning Albanian as a foreign language",
  "target_audience": {
    "age_range": "14-16 years",
    "education_level": "High school freshman",
    "prior_knowledge": "No Albanian experience",
    "cultural_context": "American students"
  },

  "curriculum_structure": {
    "total_units": 8,
    "lessons_per_unit": "4-6",
    "estimated_duration": "Full academic year (36 weeks)",
    "weekly_schedule": "3-4 lessons per week",
    "assessment_frequency": "End of each unit"
